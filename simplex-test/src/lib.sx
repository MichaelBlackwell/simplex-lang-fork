/// simplex-test - Testing framework for Simplex
///
/// Provides assertions and test result tracking.
/// Uses `tfw_` prefix (test framework) for all functions.
///
/// # Example
/// ```simplex
/// use modulus::simplex_test::tfw
///
/// fn main() -> i64 {
///     tfw_reset()
///
///     // Test assertions
///     tfw_assert(1 + 1 == 2, "basic math")
///     tfw_assert_eq_i64(4, 2 * 2, "multiplication")
///     tfw_assert_eq_str("hello", "hello", "string equality")
///
///     tfw_summary()
///     tfw_failed_count()
/// }
/// ```

// ============================================================================
// Test State Management
// ============================================================================

/// Reset test counters (passed and failed)
pub fn tfw_reset() -> Void {
    tfw_reset()
}

/// Get number of passed assertions
pub fn tfw_passed_count() -> i64 {
    tfw_passed_count()
}

/// Get number of failed assertions
pub fn tfw_failed_count() -> i64 {
    tfw_failed_count()
}

// ============================================================================
// Assertions
// ============================================================================

/// Assert a condition is true
/// Returns 1 if passed, 0 if failed
pub fn tfw_assert(condition: Bool, msg: String) -> i64 {
    if condition {
        tfw_assert(1, msg)
    } else {
        tfw_assert(0, msg)
    }
}

/// Assert two integers are equal
pub fn tfw_assert_eq_i64(expected: i64, actual: i64, msg: String) -> i64 {
    tfw_assert_eq_i64(expected, actual, msg)
}

/// Assert two strings are equal
pub fn tfw_assert_eq_str(expected: String, actual: String, msg: String) -> i64 {
    tfw_assert_eq_str(expected, actual, msg)
}

/// Assert two integers are not equal
pub fn tfw_assert_ne_i64(a: i64, b: i64, msg: String) -> i64 {
    tfw_assert_ne_i64(a, b, msg)
}

// ============================================================================
// Test Control
// ============================================================================

/// Explicitly fail a test
pub fn tfw_fail(msg: String) -> Void {
    tfw_fail(msg)
}

/// Print test summary
pub fn tfw_summary() -> Void {
    tfw_summary()
}

// ============================================================================
// Helper Functions
// ============================================================================

/// Run all tests passed?
pub fn tfw_all_passed() -> Bool {
    tfw_failed_count() == 0
}
