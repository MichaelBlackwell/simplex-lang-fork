// Phase A: Core Language Features Test

// Test while
fn test_while() -> i64 {
    var count: i64 = 0;
    var i: i64 = 5;
    while i > 0 {
        count = count + i;
        i = i - 1;
    }
    count  // Should be 15 (5+4+3+2+1)
}

// Test loop with break value
fn test_loop() -> i64 {
    var i: i64 = 0;
    let result: i64 = loop {
        i = i + 1;
        if i >= 10 {
            break i * 2;
        }
    };
    result  // Should be 20
}

fn main() -> i64 {
    let t1: i64 = test_while();
    let t2: i64 = test_loop();

    if t1 == 15 {
        print("while test: PASS\n");
    } else {
        print("while test: FAIL\n");
    }

    if t2 == 20 {
        print("loop test: PASS\n");
    } else {
        print("loop test: FAIL\n");
    }

    t1 + t2
}
