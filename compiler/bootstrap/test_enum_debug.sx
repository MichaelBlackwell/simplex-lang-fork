// Test enum variant constructors with debug

enum Status {
    Ok(i64),
    Error,
}

fn test_enum_creation() -> i64 {
    let s = Status::Ok(42);
    print("Created enum\n");
    print_i64(s);
    print("\n");

    // Just return the payload directly - try unwrapping manually
    // Status memory layout: tag at offset 0, payload at offset 8
    let ptr_val: i64 = s;
    print("Checking tag\n");

    match s {
        Status::Ok(v) => {
            print("Matched Ok with value: ");
            print_i64(v);
            print("\n");
            v
        },
        Status::Error => {
            print("Matched Error\n");
            0
        },
    }
}

fn main() -> i64 {
    let result = test_enum_creation();
    print("Result: ");
    print_i64(result);
    print("\n");

    if result == 42 {
        print("enum: PASS\n");
        1
    } else {
        print("enum: FAIL\n");
        0
    }
}
