// Test: Reference and Dereference Operators
// &x (address-of) and *p (dereference)

fn test_address_of() -> i64 {
 let x: i64 = 42;
 let p: *i64 = &x;
 *p
}

fn test_pass_by_ref(p: *i64) -> i64 {
 *p * 2
}

fn main() -> i64 {
 let val = test_address_of();
 if val == 42 {
 println("PASS: address-of and dereference");
 }
 
 let x: i64 = 21;
 let result = test_pass_by_ref(&x);
 if result == 42 {
 println("PASS: pass by reference");
 }
 
 0
}
