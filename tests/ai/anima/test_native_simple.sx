// Simple test for native AI constructs

// Define an Anima
anima TestSoul {
    identity {
        purpose: "Testing"
    }
}

// Define a Specialist
specialist TestSpec {
    model: "test-model",
    temperature: 0.5,

    receive Query(prompt: String) -> String {
        infer(prompt)
    }
}

fn main() {
    println("Testing native AI constructs");

    let soul: i64 = TestSoul_new();
    println("Created anima");

    let spec: i64 = TestSpec_new();
    println("Created specialist");

    let q: i64 = string_from("Hello");
    let response: i64 = TestSpec_handle_Query(spec, q);
    print("Response: ");
    print_string(response);
    println("");

    println("Test complete!");
}
