// Neural gate test - step by step

neural_gate simple_gate(x: f64) -> bool {
 x > 0.5
}

fn main() -> i64 {
 println("Starting neural gate test");

 // Set inference mode
 neural_set_training_mode(0);
 println("Set inference mode");

 // Call the neural gate
 println("About to call neural gate...");
 let result: f64 = simple_gate(0.8);
 println("Called neural gate");

 // Check result
 if result > 0.5 {
 println("Test PASS: gate returned true for 0.8 > 0.5");
 } else {
 println("Test FAIL: gate returned false");
 }

 println("Test complete");
 0
}
