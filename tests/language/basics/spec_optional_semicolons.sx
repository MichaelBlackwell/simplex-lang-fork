// Test optional semicolons (v0.9.1 feature)
// Semicolons should be optional for: let, var, return, break, continue

fn main() -> i64 {
    // let without semicolon
    let a: i64 = 10
    let b: i64 = 20

    // let with semicolon (still works)
    let c: i64 = 30;

    // var without semicolon
    var sum: i64 = 0
    sum = a + b + c

    // Test break/continue without semicolons in loop
    for i in 0..5 {
        if i == 0 {
            continue
        }
        if i == 3 {
            break
        }
        sum = sum + i
    }

    // Verify result: 10+20+30 + 1+2 = 63
    if sum == 63 {
        0
    } else {
        1
    }
}
