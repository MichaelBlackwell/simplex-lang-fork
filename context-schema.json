{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://simplex.senuamedia.com/context-schema.json",
  "title": "Simplex Language Context Schema",
  "description": "Schema for Simplex language context files used by LLMs for code generation and understanding",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Reference to this schema"
    },
    "meta": {
      "type": "object",
      "description": "Language metadata",
      "properties": {
        "language": { "type": "string" },
        "version": { "type": "string" },
        "description": { "type": "string" },
        "paradigms": { "type": "array", "items": { "type": "string" } },
        "influenced_by": { "type": "array", "items": { "type": "string" } },
        "file_extension": { "type": "string" },
        "context_version": { "type": "string" }
      },
      "required": ["language", "version"]
    },
    "syntax": {
      "type": "object",
      "description": "Core syntax elements"
    },
    "keywords": {
      "type": "object",
      "description": "Language keywords organized by category"
    },
    "types": {
      "type": "object",
      "description": "Type system definitions"
    },
    "operators": {
      "type": "object",
      "description": "Operators by category"
    },
    "constructs": {
      "type": "object",
      "description": "Language constructs with syntax and examples"
    },
    "ai_module": {
      "type": "object",
      "description": "AI-native primitives and functions"
    },
    "standard_library": {
      "type": "object",
      "description": "Standard library modules and functions"
    },
    "supervision": {
      "type": "object",
      "description": "Actor supervision strategies"
    },
    "cognitive_hive_architecture": {
      "type": "object",
      "description": "Cognitive hive AI architecture details"
    },
    "common_patterns": {
      "type": "object",
      "description": "Common code patterns and idioms"
    },
    "idioms": {
      "type": "object",
      "description": "Language idioms with examples"
    },
    "file_structure": {
      "type": "object",
      "description": "Module and file organization"
    },
    "implemented_keywords_from_lexer": {
      "type": "array",
      "items": { "type": "string" },
      "description": "All keywords actually implemented in the lexer"
    },
    "llm_hints": {
      "type": "object",
      "description": "Important hints for LLMs generating Simplex code"
    }
  },
  "required": ["meta", "keywords", "types"]
}
