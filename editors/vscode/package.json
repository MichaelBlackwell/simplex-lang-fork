{
  "name": "simplex-lang",
  "displayName": "Simplex Language",
  "description": "Syntax highlighting and language support for the Simplex programming language",
  "version": "0.3.4",
  "publisher": "senuamedia",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/senuamedia/simplex-lang"
  },
  "bugs": {
    "url": "https://github.com/senuamedia/simplex-lang/issues"
  },
  "homepage": "https://github.com/senuamedia/simplex-lang",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "simplex",
    "sx",
    "systems programming",
    "actors",
    "ai",
    "cognitive",
    "distributed"
  ],
  "icon": "images/simplex-icon.png",
  "galleryBanner": {
    "color": "#1E1E1E",
    "theme": "dark"
  },
  "contributes": {
    "languages": [
      {
        "id": "simplex",
        "aliases": ["Simplex", "simplex", "sx"],
        "extensions": [".sx"],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./images/simplex-icon.png",
          "dark": "./images/simplex-icon.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "simplex",
        "scopeName": "source.simplex",
        "path": "./syntaxes/simplex.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "simplex",
        "path": "./snippets/simplex.json"
      }
    ]
  },
  "scripts": {
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@vscode/vsce": "^2.22.0"
  }
}
